<Window x:Class="Running_button.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Running_button"
        mc:Ignorable="d"
        Title="Crazy_button" Height="450" Width="500">
    <Grid Name="grid" MouseMove="Grid_MouseMove" Background="#FF0975E0" OpacityMask="Black" >
        <TextBlock Name="Question" Height="40" Width="450" VerticalAlignment="Top" Margin="0,50,0,0"  FontFamily="Tahoma" FontSize="36" FontWeight="Bold" TextAlignment="Center" Foreground="White"/>
        <Button Content="YES" Margin="65,335,328.6,45"  Width="100" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="24" Click="Button_Click_Exit" Name="Positive" Foreground="White" FontFamily="Tahoma" Background="#FF1C35C2" BorderBrush="White"/>
        <Button Content="NO" Width="100" Height="40"    FontSize="24" Name="Negative" Foreground="White" FontFamily="Tahoma" Background="#FF1C35C2" BorderBrush="White" Margin="325,335,68.6,45"/>
    </Grid>
</Window>
